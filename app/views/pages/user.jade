                        web-datepicker(placeholder="Date of Birth (YYYY-MM-DD)",apperance="slide",validation='[{regexp:/^((19[0-9]{2}|2[0-9]{3})-(0[1-9]|1[012])-([123]0|[012][1-9]|31)|)$/i,msg:"DateError"}]',named="birthDate",value="#{birthDate}",mode="view")#birthDate2
                            #icon
                                +date
                        web-input(placeholder="http(s)://website.com",named="website",validation='[{regexp:"/^(http(s?)u005C:u005C/u005C/([u005Cw]+u005C.){1}([u005Cw]+u005C.?)|)$/i",msg:"WebsiteError"}]',value='#{website}',mode="view")#website2
                            #icon
                                +diamond
                        web-input(placeholder="Motto",named="motto",maxlength="30",value="#{motto}",mode="view")#motto2
