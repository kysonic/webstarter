@import 'nib';
@import "./public/stylesheets/vars";
@import "./public/stylesheets/mixins";
web-calendar
 display block;
 & > #wrapper
   width 300px;
   margin 0 auto;
   border 1px solid borderColor;
   #header
     width 100%;
     height 150px;
     background basicMenuColor;
     display inline-block;
     position relative;
     #date
        width 80px;
        height 90px;
        margin 0 auto;
        margin-top 17px;
        color borderColor;
        font-family 'Open Sans';
        font-weight bold;
        text-align center;
        text-transform uppercase;
        #month
            height 20px;
            width 100%;
            font-size: 16px;
            position relative;
            right 1px;
        #day
            height 45px;
            width 100%;
            font-size: 48px;
            line-height: 42px;
            position relative;
            right 3px;
        #year
           height 25px;
           width 100%;
           font-size: 20px;
           position relative;
           right 2px;
     #tabs-wrapper,#fromto
        width 100%;
        height 28px;
        margin-top 15px;
        #tabs
          width 100%;
          height 23px;
          .tab
            display inline-block;
            width 33%;
            font-size 17px;
            text-align center;
            color borderColor;
            transition color .2s;
            cursor pointer;
            &.selected,&:hover
              transition color .2s;
              color secondaryColor;
        #line-wrapper
          width 100%;
          height 5px;
          background darken(basicBackgroundColor,10);
          position relative;
          #line
            width 33.3%;
            height 5px;
            background secondaryColor;
            position absolute;
            transition left .2s;
     /** From to part **/
     #fromto
          #tabs
            .tab
              width 50%;
          #line-wrapper
            #fromtoLine
              width 50%;
              height 5px;
              background secondaryColor;
              position absolute;
              transition left .2s;
     #fromto-date
        width 100%;
        height 15px;
        margin 32px 0;
        #from,#to
          display inline-block;
          width 50%;
          text-align center;
          #month,#day,#year
            display inline-block;
            font-weight bold;
            color borderColor;
            font-size 17px;
     /** Error **/
     #error
        position absolute;
        width 100%;
        text-align center;
        color errorColor;
        margin-top -20px;
   #body
     width 100%;
     height 345px;
     background basicBodyColor;
     #content
       width 100%;
       height 280px;
       overflow hidden;
       #tabConveyor
         position relative;
         width 900px;
         height 300px;
         overflow hidden;
         transition left .2s;
         .tab-content
           display inline-block;
           width  33.3%;
           #months-wrapper
             padding 0px 20px;
             .month
               cursor pointer;
               display inline-block;
               width 33.3%;
               height 70px;
               .text
                 text-align center;
                 line-height 10px;
                 color: borderColor;
                 transition color .2s;
                 font-size 13px;
                 border-radius 30px;
                 padding 10px 2px;
                 margin 20px auto;
                 max-width 90%;
                 transition background .2s,color .2s;
                 &.selected
                   background secondaryColor;
                   color whiteTextColor;
                   transition background .2s,color .2s;
               &:hover
                 .text:not(.selected)
                   transition color .2s;
                   color secondaryColor;
           #days-wrapper
             padding 0px 20px;
             .day
               cursor pointer;
               display inline-block;
               width 14.28%;
               height 50px;
               .text
                 text-align center;
                 line-height 11px;
                 text-indent: -2px;
                 color: borderColor;
                 transition color .2s;
                 font-size 13px;
                 border-radius 50%;
                 padding: 12px 0px 10px 0px;
                 margin 6px auto;
                 max-width 90%;
                 transition background .2s,color .2s;
                 &.selected
                   background secondaryColor;
                   color whiteTextColor;
               &:hover
                 .text:not(.selected)
                   transition color .2s;
                   color secondaryColor;
           #years-wrapper
             padding 0px 20px;
             position relative;
             #arrow-left,#arrow-right
               height 100%;
               width 20px;
               position absolute;
               left:0;
               top:0;
               margin-left 2px;
               &#arrow-right
                  left: 100%;
                  margin-left -22px;
               .icon
                  width 20px;
                  height 20px;
                  position absolute;
                  top: 50%;
                  margin-top -10px;
                  cursor pointer;
                  &:hover
                    svg
                      stroke-width 2px;
             .year
               cursor pointer;
               display inline-block;
               width 33.3%;
               height 50px;
               .text
                 text-align center;
                 line-height 11px;
                 text-indent: -2px;
                 color: borderColor;
                 transition color .2s;
                 font-size 13px;
                 border-radius 30px;
                 padding 10px 2px;
                 margin 20px auto;
                 max-width 90%;
                 transition background .2s,color .2s;
                 &.selected
                   background secondaryColor;
                   color whiteTextColor;
               &:hover
                 .text:not(.selected)
                   transition color .2s;
                   color secondaryColor;
     #buttons
        width 100%;
        height 65px;
        web-ripple-button
          margin-top 15px;
          margin-left 35px;





