web-ripple
  display block;
  position absolute;
  top:0;
  left:0;
  width 100%;
  height 100%;
  overflow hidden;
  #rippleWrapper {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: inherit;
    pointer-events: none;
  }
  .ripple {
    position: absolute;
    width: 2px;
    height: 2px;
    border-radius: 50%;
    background-color: #fff;
    opacity: 0;
    pointer-events: none;
  }
  @-webkit-keyframes ripple-in {
    0% {
      opacity: 0;
      transform: scale(0);
    }
  }
  @keyframes ripple-in {
    0% {
      opacity: 0;
      transform: scale(0);
    }
  }
  @keyframes ripple-out {
    0% {
       opacity: 0.2;
       transform: scale(20);
    }
  }


