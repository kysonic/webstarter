@import 'nib';
@import "./public/stylesheets/vars";
@import "./public/stylesheets/mixins";
web-input
  display inline-block;
  width 100%;
  height 100%;
  position relative;
  & > #input
    position absolute;
    z-index 3;
    width 100%;
    outline none;
    height 50px;
    background transparent;
    border 1px solid grayTextColor;
    border-top none;
    border-left none;
    font-family baseFanily;
    font-size 16px;
    color swampTextColor;
    padding-left: 12px;
    padding-right: 12px;
    &:focus + #clone-border
      top 0px;
      height 49px;
      left -1px;
      transform scaleX(1);
      border-bottom  2px solid darken(grayTextColor,10);
      transition transform .2s ease-in,height .2s ease-in .2s,top .2s ease-in .2s;
  #clone-border
    z-index: 2;
    display block;
    width 100%;
    position absolute;
    top 46px;
    left 0;
    border 2px solid darken(grayTextColor,10);
    border-top none;
    border-left none;
    height 3px;
    transform scaleX(0);
    transition transform .2s ease-in .3s, height .2s, top .2s;
  #placeholder
    position absolute;
    z-index: 2;
    font-family baseFanily;
    font-size 16px;
    color grayTextColor;
    padding-left: 12px;
    line-height 50px;
    height 50px;
    transition color .2s ease-in .2s, font-size .2s ease-in .2s,line-height .2s ease-in .2s;
    &.focus
      line-height 14px;
      font-size 12px;
      color lighten(swampTextColor,25);
      transition color .2s ease-in .2s, font-size .2s ease-in .2s,line-height .2s ease-in .2s;


