@import 'nib';
@import "./public/stylesheets/vars";
@import "./public/stylesheets/mixins";
web-education
  display block;
  #wrapper
    display block;
    position relative;
    #add
      margin-top 15px;
    /** Education **/
    #educations-wrapper
      .educations
          margin-top 5px;
          color borderColor;
          border-bottom 1px solid borderColor;
          padding 10px;
          cursor pointer;
          &:last-child
            border-bottom none;
          &:hover
              color darken(borderColor,8);
          .universityName
              display inline-block;
              font-size 18px;
              font-weight bold;
              min-width 30%;
            .date
              display inline-block;
            .universityLocation
              display inline-block;
              font-size 14px;
              font-weight bold;
            .degree
              display inline-block;

#educationSlide
  #wrapper
    max-width 380px !important;
    #push
       margin-top 15px;



