todo
    x-local-storage(key="todo")
    h4 {{ opts.title }}
    ul
        li(each='{{ items.filter(filter) }}')
            label(class='{{ completed: done }}')
                input(type='checkbox', checked='{{ done }}', onclick='{{ parent.toggle }}')
                |  {{ title }}
            .remove(onclick="{{parent.remove}}") X
    form(onsubmit='{{ add }}')
        input(name='input', onkeyup='{{ edit }}')
        button.todo(disabled='{{ !text }}')
            | Add {{items.length + 1}}