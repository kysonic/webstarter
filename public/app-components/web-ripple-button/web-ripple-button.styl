@import "./public/stylesheets/vars";
web-ripple-button
  display inline-block;
  position relative;
  width 100%;
  &.outline
    width 100px;
  &.yellow-round #button
    overflow hidden;
    position relative;
    outline none;
    display block;
    margin 0 auto;
    font-family lightFamily;
    font-size 16px;
    width 100px;
    height 30px;
    line-height 30px;
    cursor pointer;
    padding 0px 20px;
    background secondaryColor;
    border-radius 20px;
    color: #fff;
    text-align center;
    transition background .2s ease-out;
    border: none;
    &:hover
      background darken(secondaryColor,3) !important;
      transition background .2s ease-out;
    &:active
      background  darken(secondaryColor,5);
  &.purple-rect.__checked #button
    transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
    background secondaryButtonColor;
    border 1px solid secondaryButtonColor !important;
    color whiteTextColor;
    &:hover
      background darken(secondaryButtonColor,5);
  &.purple-rect #button
    display inline-block;
    height 100%;
    width 100%;
    cursor pointer;
    position relative;
    border 1px solid borderColor;
    border-left none;
    background transparent;
    transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
    &:first-child {
      border 1px solid borderColor;
    }
    &:hover
      transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
      background secondaryButtonColor;
      border 1px solid secondaryButtonColor;
      color whiteTextColor;
    cursor pointer;
    height 100%;
    line-height 48px;
    font-size: 20px;
    font-family lightFamily;
    font-stretch ultra-condensed;
    text-align center;
    color: grayTextColor;
  &.outline #button
    overflow hidden;
    position relative;
    outline none;
    display block;
    margin 0 auto;
    font-family lightFamily;
    font-size 16px;
    width 100px;
    height 30px;
    line-height 28px;
    cursor pointer;
    padding 0px 20px;
    background transparent;
    border-radius 20px;
    color: borderColor;
    text-align center;
    transition background .2s ease-out;
    border: 1px solid borderColor;





