@import "./public/stylesheets/vars";
web-ripple-button
  display inline-block;
  position relative;
  width 100%;
  margin 0 auto;
  /** File **/
  input[type="file"]#file
    cursor pointer;
    display block;
    position absolute;
    top: 0;
    left: 0;
    opacity 0;
    width 100%;
    z-index: 20;
    & /deep/ input
      cursor pointer;
  /**Metrics**/
  &.w300
    display block;
    max-width 300px;
    margin 0 auto;
  &.w150
    display block;
    max-width 150px;
    margin 0 auto;
  &.outline
    width 100px;
  /** Yellow**/
  &.yellow-round #button
    overflow hidden;
    position relative;
    outline none;
    display block;
    margin 0 auto;
    font-family lightFamily; font-weight: 300; 
    font-size 16px;
    width 100%;
    height 30px;
    line-height 30px;
    cursor pointer;
    padding 0px 20px;
    background secondaryColor;
    border-radius 20px;
    color: #fff;
    text-align center;
    transition background .2s ease-out;
    border: none;
    &:hover
      background darken(secondaryColor,3) !important;
      transition background .2s ease-out;
    &:active
      background  darken(secondaryColor,5);
  &.yellow-round.t #button
    width 100px;
  &.purple-round #button
    overflow hidden;
    position relative;
    outline none;
    display block;
    margin 0 auto;
    font-family lightFamily; font-weight: 300;
    font-size 14px;
    width 100%;
    min-width 70px;
    height 30px;
    line-height 30px;
    cursor pointer;
    padding 0px 10px;
    background transparent;
    border-radius 20px;
    color: borderColor;
    text-align center;
    transition background .2s ease-out;
    border: 1px solid borderColor;
    &:hover
      background secondaryButtonColor;
      border: 1px solid secondaryButtonColor;
      color whiteTextColor;
      transition background .2s ease-out;
    &:active
      background  darken(secondaryButtonColor,5);
      border: 1px solid secondaryButtonColor;
      transition background .2s ease-out;
      color whiteTextColor;
  /**Purple Rect**/
  &.purple-rect.__checked #button
    transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
    background secondaryButtonColor;
    border 1px solid secondaryButtonColor !important;
    color whiteTextColor;
    &:hover
      background darken(secondaryButtonColor,5);
  &.purple-rect #button
    display inline-block;
    height 100%;
    width 100%;
    cursor pointer;
    position relative;
    border 1px solid borderColor;
    border-left none;
    background transparent;
    transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
    &:first-child {
      border 1px solid borderColor;
    }
    &:hover
      transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
      background secondaryButtonColor;
      border 1px solid secondaryButtonColor;
      color whiteTextColor;
    cursor pointer;
    height 100%;
    line-height 48px;
    font-size: 20px;
    font-family lightFamily; font-weight: 300;
    font-stretch ultra-condensed;
    text-align center;
    color: grayTextColor;

  /**Tabs**/
  &.tabs
    &[checked]
      #button
        color: secondaryColor;
    #button
      display inline-block;
      height 100%;
      width 100%;
      cursor pointer;
      position relative;
      border none
      background transparent;
      transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
      cursor pointer;
      height 100%;
      line-height 50px;
      font-size: 20px;
      font-family lightFamily; font-weight: 300;
      font-stretch ultra-condensed;
      text-align center;
      color: grayTextColor;
  /** Skillz **/
  &.skillz #button
    display inline-block;
    height 100%;
    width 100%;
    cursor pointer;
    position relative;
    border-left none;
    background #D6C46E;
    transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
    cursor pointer;
    height 100%;
    line-height 48px;
    font-size: 20px;
    font-family lightFamily; font-weight: 300;
    font-stretch ultra-condensed;
    text-align center;
    color: whiteTextColor;
    &:hover
      transition background .2s cubic-bezier(1, 0.7, 0.2, 1);
      background darken(#D6C46E,5);
      color whiteTextColor;
  &.skillz.adv #button
    background #C6BC60;
    &:hover
      background darken(#C6BC60,5);
  &.skillz.high #button
    background #A5A530;
    &:hover
      background darken(#A5A530,5);
  /** Outline **/
  &.outline #button
    overflow hidden;
    position relative;
    outline none;
    display block;
    margin 0 auto;
    font-family lightFamily; font-weight: 300;
    font-size 16px;
    width 100%;
    height 30px;
    line-height 28px;
    cursor pointer;
    padding 0px 20px;
    background transparent;
    border-radius 20px;
    color: borderColor;
    text-align center;
    transition background .2s ease-out;
    border: 1px solid borderColor;





