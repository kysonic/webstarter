@import "nib";
@import "./public/stylesheets/vars";
web-usersearch
  display block;
  #results
    position relative;
    left 2px;
    .userCard
      display inline-block;
      width 145px;
      height 170px;
      margin-left 10px;
      cursor pointer;
      &:hover
        hr
          border 7px solid darken(borderColor,10);
          transition border .2s;
        .name
          color darken(borderColor,10);
          transition color .2s;
        .email
          color darken(borderColor,10);
        .userAvatar
          opacity 1;
          filter: blur(0px);
          transition opacity .2s;
      .userAvatar
        width 100px;
        height 100px;
        margin 0 auto;
        border-radius 50%;
        overflow hidden;
        opacity 0.8;
        filter: blur(0.2px);
        transition opacity .2s;
        img
          width 100%;
          height 100%;
      .name
        width 100%;
        height 45px;
        text-align center;
        font-size 17px;
        font-stretch ultra-condensed;
        color borderColor;
        transition color .2s
        margin-top 5px;
      hr
        border 7px solid borderColor;
        transition border .2s;
        margin 2px 0;
      .email
        text-align center;
        color borderColor;


