@import 'nib';
@import "./public/stylesheets/vars";
web-tags
  display block;
  position relative;
  web-select
    margin-top 0px !important;
  #tagWrapper
    position absolute;
    margin-left 9px;
    z-index 100;
    top: 15px;
    .tag
      display inline-block;
      min-width 50px;
      height 25px;
      color whiteTextColor;
      font-size 13px;
      margin-left 5px;
      padding-left 5px;
      background borderColor;
      transition background .2s;
      .title
        display inline-block;
        float left;
        color: whiteTextColor;
        line-height:25px;
        white-space nowrap;
        width: 40%;
      /** Buttons **/
      .button,.remove,.change
        cursor pointer;
        float right;
        display inline-block;
        width 15px;
        height 15px;
        background whiteTextColor;
        border-radius 50%;
        background #fff;
        margin-right: 5px;
        margin-left: 5px;
        margin-top: 5px;
      .remove
          &:hover
            background basicMenuColor;
          svg
            path, circle, line, polyline, rect
              stroke borderColor !important;



