@import 'nib';
@import "./public/stylesheets/vars";
web-mockups
  display block;
  #addNew
    display inline-block;
    vertical-align top;
    width 47.5%;
    height 420px;
    border 2px dashed borderColor;
    text-align center;
    line-height 420px;
    cursor pointer;
    color borderColor;
    transition border .2s;
    svg
      position absolute;
      top 0;
      left 0;
      width 100%;
      height 100%;
      path
        stroke-dasharray: 20;
        stroke-dashoffset: 100;
        transition stroke-dashoffset .2s,stroke-dasharray .2s;
    &:hover
      color darken(borderColor,10);
      svg
        path,circle,line,polyline
          stroke darken(borderColor,10);
          stroke-dasharray: 20;
          stroke-dashoffset: 0;
          transition stroke-dashoffset .2s,stroke-dasharray .2s;
  #first
    display inline-block;
    vertical-align top;
    width 47.5%;
    height 420px;
    border 2px dashed borderColor;
    margin-left 5%;
    & > svg
      width 100%;
      height 100%;
      position absolute;
      top 0;
      left 0;
    #image
      width 100%;
      height 250px;
      position relative;
      top 10px;
      svg
        width 100%;
        height 100%;
    #titleBar
      width 100%;
      height 50px;
      background borderColor;
      #bar
        width 100%;
        svg
          width 100%;
          height 100%;
          position absolute;
      #text
        font-size 26px;
        padding 6px;
        color whiteTextColor;
    #desc
      width 100%;
      padding 20px;
      height 60px;
      color borderColor;
      font-size 18px;
    

  .mockup
    display inline-block;
    width 47.5%;
    height 420px;
    margin-left 5%;
    margin-top 20px;
    cursor pointer;
    vertical-align top;
    &.queue:nth-child(1)
      margin-top 0;
    &.queue:nth-child(2)
      margin-top 0;
    &:hover
      .mockup-additionals
        background darken(secondaryColor,5);
    &:nth-child(2n+1)
      margin-left 0%;
      margin-top 20px;
    .mockup-image
      height 250px;
      width: 100%;
      overflow hidden;
      img
        min-width 100%;
        height 250px;
        position relative;
      #substitute
        min-width 100%;
        height 250px;
        position relative;
        background lighten(borderColor,20);
        svg
          width 100%;
          height 100%;
          path,line,circle,polyline,rect
            stroke whiteTextColor;
    .mockup-additionals
      height 50px;
      width: 100%;
      background secondaryColor;
      color: whiteTextColor;
      .views,.date
        display inline-block;
        .icon,.text
          float left;
        .icon
          svg
            path,circle,polyline, line, rect
              stroke whiteTextColor;
        .text
          text-transform uppercase;
          font-size 17px;
          margin-top 15px;
    .mockup-info
      border 1px solid borderColor;
      height 120px;
      width: 100%;
      padding 15px;
      overflow hidden;
    .mockup-name
      font-size 25px;
      color borderColor;
    .mockup-description
      margin-top 5px;
      font-size 17px;
      color borderColor;
  
#mockUpForm
  padding 10px;
  #wrapper
    max-width 760px !important;
    #form-wrapper
      padding 20px;
      border 1px solid borderColor;
    web-datepicker,web-tags
      display inline-block;
      width 45%;
    web-tags
      margin-left 10%;
    web-datepicker,web-input,web-textarea
      margin-top 10px;
    web-input
      margin-top 0px;
    web-image
      width 100%;
      height 350px;
    #addMockup
      margin-top 10px;
#mockupOverGround
  img
    max-height 700px;