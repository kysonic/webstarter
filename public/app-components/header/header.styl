header
  display block;
  height 70px;
  width 100%;
  background #1fadc5;
  #logo
    color: #fff;
    text-transform uppercase;
    font-size 30px;
    line-height 65px;
    margin-left 20px;
  #menu-button
    margin-top 10px;
    float right;
    display block;
    width 50px;
    height 50px;
    line-height 52px;
    border-radius 50%;
    background #2390a5;
    cursor pointer;
    color: #fff;
    font-size 12px;
    text-align center;
    &:hover
      background #247c92;


