@import 'nib';
@import "./public/stylesheets/vars";
web-project
  display block;
  .row
    display table-row;
  #pjctName
    display block;
    width 100%;
    text-align center;
    color secondaryColor;
    font-size 35px;
    margin-top 0px;
  #author
    color borderColor;
    font-size 16px;
    text-align center;
    margin-top 5px;
    margin-bottom 15px;
  #projectCardWrapper
    width 100%;
    height 300px;
    display table;
    #topInformation
      display table-caption;
      width 100%;
      height 40px;
      background secondaryColor;
    #imageWrapper
      display table-cell;
      width 533px;
      margin-top 1px;
      height 266px;
      web-image
        width 535px;
        height 300px;
    #basicSet
      display table-cell;
      background basicMenuColor;
      width auto;
      vertical-align middle;
      padding 0 10px;
      #for web-input
        max-width 365px;
      #iNeed, #for web-input
        display block;
        margin 0 auto;
        height 75px;
        & input
          height 75px;
          color secondaryColor;
          font-size 45px;
          font-weight bold;
          padding-right: 75px;
          &:focus + #clone-border
            top 0px;
            height 75px;
        #clone-border
          top 71px;
        #placeholder
          font-size 40px;
          line-height 76px;
          &.focus
            line-height 14px;
            font-size 12px;
            color lighten(swampTextColor,25);
        #icons
          height 75px;
          width 75px;
          margin-left -75px;
          #icon
            height 55px;
            width 55px;
            svg
              width 75px;
              height 75px;



